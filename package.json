{
  "name": "nodejs-testcontainer-demo",
  "version": "1.0.0",
  "description": "Demo project showing TestContainers with MongoDB and Express REST API",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": ["testcontainers", "mongodb", "express", "jest", "docker"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^10.13.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "testcontainers": "^10.13.2"
  }
}
